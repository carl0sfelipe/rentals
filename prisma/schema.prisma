// Prisma schema for Rentals API
// Basic User model (extend later)

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: User can have many Properties
  properties Property[]
}

model Property {
  id            String   @id @default(uuid()) @db.Uuid
  title         String
  description   String
  address       String
  pricePerNight Float
  bedrooms      Int
  bathrooms     Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relation: Property belongs to a User
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id])
}
